IDD_EDIT_SNIPPET DIALOGEX 0, 0, 380, 240
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Edit Snippet"
FONT 8, "MS Shell Dlg", 0, 0, 0x1
BEGIN
    LTEXT           "Snippet &name:",IDC_STATIC,7,5,55,8
    EDITTEXT        IDC_NAME,75,5,200,14,ES_AUTOVSCROLL | ES_AUTOHSCROLL
    CONTROL         "&Replace selection",IDC_REPLACE_SEL,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,290,7,71,10
    LTEXT           "&Before selection:",IDC_BEFORE_SEL_TXT,75,31,300,100 
    EDITTEXT        IDC_BEFORE_SEL,75,31,300,100,WS_VSCROLL | ES_MULTILINE | ES_AUTOVSCROLL | ES_AUTOHSCROLL | ES_WANTRETURN
    LTEXT           "&After selection:",IDC_AFTER_SEL_TXT,7,137,55,8
    EDITTEXT        IDC_AFTER_SEL,75,136,300,60,WS_VSCROLL | ES_MULTILINE | ES_AUTOVSCROLL | ES_AUTOHSCROLL | ES_WANTRETURN
    CONTROL         "Start &new document",IDC_NEW_DOC,"Button",BS_AUTOCHECKBOX | WS_TABSTOP,75,200,81,10
    LTEXT           "&Language for doc:",IDC_STATIC,7,220,70,8
    COMBOBOX        IDC_NEW_DOC_LANG,75,218,100,30,CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    DEFPUSHBUTTON   "OK",IDOK,222,218,50,14
    PUSHBUTTON      "Cancel",IDCANCEL,290,218,50,14
END

